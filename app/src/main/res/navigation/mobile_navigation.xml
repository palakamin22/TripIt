<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_shopping">

    <fragment
        android:id="@+id/navigation_shopping"
        android:name="com.example.tripit.ui.home.HomeFragment"
        android:label="@string/title_shopping"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_food"
        android:name="com.example.tripit.ui.dashboard.DashboardFragment"
        android:label="@string/title_Food"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_activities"
        android:name="com.example.tripit.ui.notifications.NotificationsFragment"
        android:label="@string/title_activities"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_places"
        android:name="com.example.tripit.ui.place.PlaceFragment"
        android:label="@string/title_places"
        tools:layout="@layout/fragment_place"/>
</navigation>